{
    "extends": [
        "tslint-angular"
    ],
    "rules": {
        "max-classes-per-file": true,
        "directive-selector": [
            true,
            "attribute",
            [
                "dir-prefix1",
                "dir-prefix2"
            ],
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            [
                "cmp-prefix1",
                "cmp-prefix2"
            ],
            "kebab-case"
        ]
    }
}