{
    "compilerOptions": {
        "baseUrl": ".",
        "experimentalDecorators": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strictNullChecks": false,
        "noImplicitAny": false,
        "removeComments": true, 
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "target": "es2020",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types/"
        ]
    },
    "exclude": [
        "node_modules",
        "examples"
    ],
    "angularCompilerOptions": {
        "genDir": "./dist",
        "skipMetadataEmit": false,
        "skipTemplateCodegen": true
    }
}